.songcontent{
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
  background-color: gray;
}
.needlecontent{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}
.needle{
  width: 200rpx;
  height: 300rpx;
  position: relative;
  left: 60rpx;
  top: -35rpx;
  z-index: 99;
  transform-origin: 35rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
}
.needlsRoate{
  transform: rotate(0deg);
}
.circle{
  position: relative;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: white;
  margin-top: 20rpx;
  z-index: 100;
}
.disccontent{
  text-align: center;
  position: relative;
  top: -180rpx;
}
.disc{
  width: 550rpx;
  height: 550rpx;
}
.disc-son{
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  width: 345rpx;
  height: 345rpx;
  border-radius: 50%;
}
.discAnimation{
  animation: disc 4s linear infinite;
  animation-delay: 1s;
}
@keyframes disc{
  from {
  transform: rotate(0deg);
  }
  to {
   transform: rotate(360deg);
  }
}
.musicControl{
  position: absolute;
  height: 80rpx;
  bottom: 60rpx;
  left: 0;
  border-top: solid 1rpx white;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  line-height: 80rpx;
  color: white;
}
.musicControl text{
  font-size: 45rpx;
}
.big{
  font-size: 60rpx !important;
}

.progress-box{
  display: flex;
  width: 640rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  bottom: 200rpx;
}
.progress{
  width: 460rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.6);
  margin: auto;
  position: relative;
}
.red-progress{
  height: 4rpx;
  background: red;
  position: absolute;
  left: 0;
  top: 0;
}
.circle{
  width: 16rpx;
  height: 16rpx;
  background: white;
  border-radius: 50%;
  position: absolute;
  right: -8rpx;
  top: -26rpx;
}