<view class="indexcontainer">
  <swiper class="swipercontainer" 	indicator-dots="true" 	indicator-color="rgba(0, 0, 0, .3)" 	indicator-active-color="#000000">
    <swiper-item wx:for="{{bannerList}}"  wx:key="bannerId">
      <image src="{{item.pic}}" class="swipimg"></image>
    </swiper-item>
  </swiper>
  <view class="bannerph">
   <view class="banneritem" bindtap="openRecommendSong">
     <text class="iconfont icon-meirituijian"></text>
     <text>每日推荐</text>
   </view>
   <view class="banneritem">
     <text class="iconfont icon-meirituijian"></text>
     <text>歌单</text>
   </view>
   <view class="banneritem">
     <text class="iconfont icon-meirituijian"></text>
     <text>排行榜</text>
   </view>
   <view class="banneritem">
     <text class="iconfont icon-gedan1"></text>
     <text>电台</text>
   </view>
   <view class="banneritem">
     <text class="iconfont icon-gedan1"></text>
     <text>直播</text>
   </view>
  </view>
  <view class="recommendcontainer">
  <NavBar title="推荐歌曲" recommendtitle="为你精心推荐"></NavBar>
   <view class="recommendcontent">
     <scroll-view class="scrollcontainer" enable-flex scroll-x="true">
       <view class="scrollitem" wx:for="{{recommendList}}" wx:for-item="recommendItem" wx:key="id">
         <image src="{{recommendItem.picUrl}}"></image>
         <text>{{recommendItem.name}}</text>
       </view>
     </scroll-view>
   </view>
  </view>
  <view class="topcontainer">
    <NavBar title="排行榜" recommendtitle="热歌风向标"></NavBar>
    <swiper class="topswipcontainer" next-margin="50rpx" previous-margin="50rpx">
      <swiper-item wx:for="{{topList}}" wx:key="name">
        <view class="toptitle">{{item.name}}</view>
        <view class="swiptopitem" wx:for="{{item.topitemList}}" wx:key="id" wx:for-item="topitem" wx:for-index="sn">
          <view>
            <image src="{{topitem.al.picUrl}}"></image>
            <text>{{sn+1}}</text>
            <text>{{topitem.name}}</text>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>
</view>
