.searchcontent{
  display: flex;
}
.searchinput{
 flex: 1;
 position: relative;
 height: 60rpx;
 line-height: 60rpx;
 padding-left: 60rpx;
}
.iconsearch{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}
.cancelbtn{
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.placeholder{
    color: lightblue;
}
.hotcontent{
    padding: 0 20rpx 0 20rpx;
}
.hot-title{
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: solid 1rpx rgba(0, 0, 0, 0.3);
}
.hot-body{
    display: flex;
    flex-wrap: wrap;
}
.hot-item{
    height: 80rpx;
    line-height: 80rpx;
    width: 50%;
}
.hot-item text:nth-child(1){
    margin-right: 10rpx;
}
.searchwordIcon{
    width: 30rpx;
    height: 30rpx;
}
.search-box{
    padding: 20rpx 20rpx 0 20rpx;
}
.show-search{
    width: 96%;
    margin: 0 auto;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    color: rgb(0, 140, 255);
    border-bottom: solid 1rpx rgb(0, 140, 255);
}
.search-item{
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}
.search-item text{
    width: 60rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
}
.search-item view{
    flex: 1;
    border-bottom: solid 1rpx rgba(0, 0, 0, 0.3);
}
.historycontent{
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 20rpx;
  position: relative;
}
.history-title{
  height: 40rpx;
  line-height: 40rpx;
}
.historyitem{
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  background: lightgray;
}
.delete{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  
}
.closebtn{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
  line-height: 60rpx;
  color: gray;
  z-index: 99;
}